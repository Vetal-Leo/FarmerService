@model Domain.Entities.User.FarmerUser

@{
    ViewBag.Title = "Пользователи.Изменение состояния аккаунта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="academy-users">Пользователи. Изменение состояния аккаунта.</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">      
                @Html.LabelForModel(Model.Email, htmlAttributes: new { @class = "control-label col-md-2" })  
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.АccountBlocking, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.АccountBlocking)
                    @Html.ValidationMessageFor(model => model.АccountBlocking, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Сохранить" class="btn btn-primary btn-xs inlet" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад в Пользователи", "Users")
</div>





